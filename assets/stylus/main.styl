// Load npm packages
@import '~normalize-styl'
@import './weather-icons'
@import './transitions'

// Set font-sizes so rem values for responsive effects.  Combined with the
// font() call on `body`, this scales from 20px down to 14px
:root
	mq-values(font-size, 100%, 70%, max-w)

*, *:after, *:before
	box-sizing border-box
	outline none
	-webkit-font-smoothing antialiased
	-ms-interpolation-mode bicubic

html, body
	min-height 100%

body
	font-family 'Roboto', 'Helvetica', 'Arial', sans-serif
	background dark-green
	color gray
	background linear-gradient(150deg, slate 0%, dark-green)

	padding rem(32px)

	@media(max-width tablet)
		padding rem(16px)
		margin-bottom rem(60px)
p
	margin 0
	font-size rem(18px)
	color gray
	font-weight text-light
	line-height 1.5

a
	color #fafafa
	text-decoration none

a.btn
	background pink
	padding rem(14px) rem(22px)
	display inline-block
	box-shadow 0 0 0 transparent
	transition transform .2s ease, box-shadow .2s ease

	&:hover
		transform scale(1.05)
		box-shadow 0 0 20px rgba(black,0.2)

	&:active
		transform scale(0.97)

h1, h2, h3, h4, h5
	font-weight text-ultra-light
	line-height 1.3
	color dark-green

h1
	font-size rem(52px)
	font-weight text-light
	margin-bottom rem(16px)

	@media(max-width tablet)
		font-size rem(48px)

h2
	font-size rem(46px)

h3
	font-size rem(40px)

h4
	font-size rem(30px)
	font-weight text-light

h5
	font-size rem(20px)
	font-weight text-light
