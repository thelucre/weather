// Load npm packages
@import '~normalize-styl'
@import './transitions'

// Set font-sizes so rem values for responsive effects.  Combined with the
// font() call on `body`, this scales from 20px down to 14px
:root
	mq-values(font-size, 100%, 70%, max-w)

*, *:after, *:before
	box-sizing border-box

html, body
	height 100%

body
	font-family 'Roboto', 'Helvetica', 'Arial', sans-serif
	background dark-green
	color gray
	padding 2rem
	background linear-gradient(160deg, blue -100%, dark-green)

p
	margin 0
	font-size rem(18px)
	color gray
	font-weight text-light
	line-height 1.5

a
	color #fafafa
	text-decoration none

h1, h2, h3, h4, h5
	font-weight text-ultra-light
	line-height 1.3
	color dark-green

h1
	font-size rem(52px)

h2
	font-size rem(46px)

h3
	font-size rem(40px)

h4
	font-size rem(30px)

h5
	font-size rem(24px)
